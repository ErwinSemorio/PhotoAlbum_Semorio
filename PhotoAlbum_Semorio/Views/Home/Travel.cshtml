@model IEnumerable<PhotoAlbum_FamilyName.Models.Photo>

@{
    ViewData["Title"] = "Travel Collection";
}

<h1 class="gallery-title">Travel Collection</h1>

<div class="gallery">
    @foreach (var photo in Model)
    {
        var m = System.Text.RegularExpressions.Regex.Match(photo.Title ?? "", @"\d+");
        var number = m.Success ? m.Value : photo.Title;

        <div class="photo-card">
            <a href="@photo.ImagePath" class="photo-link" data-caption="@number">
                <img src="@photo.ImagePath" alt="@photo.Title" />
            </a>
            <h4 class="photo-number">@number</h4>
        </div>
    }
</div>
